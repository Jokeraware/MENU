FORMULAIRE ADD RESTAURANT


<%= form_tag url_for(action: 'create'), method: "post" do %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">


  <div class="form-group mb-3 mt-3 col-sm">
    <%= label_tag 'Restaurant Name' %>
    <%= text_field_tag 'restaurant_name', @restaurant.restaurant_name, class:"form-control" %>
  </div>


  <div class="actions text-center">
    <%= submit_tag "Add", class:"btn btn-success mt-3"%>
  </div>
<% end %>