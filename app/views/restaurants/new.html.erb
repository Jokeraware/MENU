<%= form_with model: @restaurant, url: restaurants_path, method: "post" do |form| %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-group mb-3 mt-3 col-sm">
    <%= form.label :restaurant_name, 'Restaurant Name' %>
    <%= form.text_field :restaurant_name, class: "form-control" %>
  </div>

  <div class="form-group mb-3 mt-3 col-sm">
    <%= form.label :admin_id, 'Your Name' %>
    <%= form.text_field :admin_id, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :city_id, "City" %>
    <%= form.collection_select :city_id, City.all, :id, :city_name, prompt: "Select your city" %>
  </div>

  <div class="actions text-center">
    <%= form.submit "Add", class: "btn btn-success mt-3" %>
  </div>
<% end %>
