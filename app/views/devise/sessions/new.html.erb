<div class="coontainer">
  <div class="heading">
    LOG IN
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form">
      <%= f.email_field :email, class: "input", placeholder: "Email", required: true %>
      <%= f.password_field :password, class: "input", placeholder: "Password", required: true %>
      <span class="forgot-password"> <%= link_to 'Forgot Password ?', new_user_password_path %> </span>
      <%= f.submit "LOG IN", class: "login-button" %>
    </div>
    <p class="p-log"> Don't have an account ? &nbsp <%= link_to 'SIGN UP', new_user_registration_path %> &nbsp as user</p>

    <p class="p-log"> Or &nbsp <%= link_to 'SIGN UP', new_admin_registration_path %> &nbsp as admin</p>
  <% end %>
</div>

